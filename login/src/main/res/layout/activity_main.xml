<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="5dp"
    android:background="@drawable/x"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="用户名/抠抠号"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="密码"
        android:id="@+id/edit_password"
        android:layout_below="@+id/editText"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@id/editText"
        android:layout_alignStart="@id/editText"
        android:layout_alignRight="@id/editText"
        android:layout_alignEnd="@id/editText"
        android:layout_centerVertical="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="注 册"
        android:textSize="30sp"
        android:id="@+id/button_register"
        android:layout_marginTop="42dp"
        android:background="@drawable/a"
        android:layout_below="@+id/edit_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:background="@drawable/a"
        android:textSize="30sp"


        android:layout_alignBaseline="@+id/button_register"
        android:layout_alignRight="@+id/edit_password"
        android:layout_alignEnd="@+id/edit_password"
        android:id="@+id/button" />

    <CheckBox
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示密码"
        android:textColor="#242529"
        android:layout_centerHorizontal="true"
        android:id="@+id/show_password"
        android:layout_below="@+id/button_register" />

    <CheckBox

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:textColor="#242529"
        android:id="@+id/checkBox"
        android:layout_below="@+id/show_password"
        android:layout_alignLeft="@+id/show_password"
        android:layout_alignStart="@+id/show_password" />



    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于我们"
        android:textSize="8pt"
        android:textColor="#242529"
        android:id="@+id/button_about"
        android:layout_alignParentBottom="true"
         />


</RelativeLayout>
